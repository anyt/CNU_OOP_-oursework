{% extends 'base.html.twig' %}

{% block title %}Ресурси{% endblock %}

{% block body %}
    <h1>Ресурси</h1>

    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Імʼя</th>
            <th>Дії</th>
        </tr>
        </thead>
        <tbody>
        {% for resource in resources %}
            <tr>
                <td>{{ resource.id }}</td>
                <td>
                    <a href="{{ path('app_resource_show', {'id': resource.id}) }}">{{ resource.name }}</a></td>
                <td>
                    {% if(is_granted('ROLE_ADMIN')) %}
                        <a href="{{ path('app_resource_edit', {'id': resource.id}) }}">редагувати</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">немає записів</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if(is_granted('ROLE_ADMIN')) %}
        <a href="{{ path('app_resource_new') }}">Створити ресурс</a>
    {% endif %}
{% endblock %}
